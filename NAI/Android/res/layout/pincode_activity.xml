<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:gravity="center"
	>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">

		<EditText style="@style/PinCodeVisual" android:id="@+id/etPinCode"
			android:text="" ></EditText>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">

		<Button style="@style/NumberButtonStyle" android:id="@+id/btnNum1"
			android:text="1" android:tag="1" />
		<Button style="@style/NumberButtonStyle" android:id="@+id/btnNum2"
			android:text="2" android:tag="2" />
		<Button style="@style/NumberButtonStyle" android:id="@+id/btnNum3"
			android:text="3" android:tag="3" />
		<Button style="@style/NumberButtonStyle" android:id="@+id/btnNum4"
			android:text="4" android:tag="4" />
		<Button style="@style/NumberButtonStyle" android:id="@+id/btnNum5"
			android:text="5" android:tag="5" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">


		<Button style="@style/NumberButtonStyle" android:id="@+id/btnNum6"
			android:text="6" android:tag="6" />
		<Button style="@style/NumberButtonStyle" android:id="@+id/btnNum7"
			android:text="7" android:tag="7" />
		<Button style="@style/NumberButtonStyle" android:id="@+id/btnNum8"
			android:text="8" android:tag="8" />
		<Button style="@style/NumberButtonStyle" android:id="@+id/btnNum9"
			android:text="9" android:tag="9" />
		<Button style="@style/NumberButtonStyle" android:id="@+id/btnNum0"
			android:text="0" android:tag="0" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">
		<Button style="@style/OkButtonStyle" android:id="@+id/btnOk"
			android:text="OK" />

		<Button style="@style/DelButtonStyle" android:id="@+id/btnDel"
			android:text="Del" />

	</LinearLayout>

</LinearLayout>
