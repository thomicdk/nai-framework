<?xml version="1.0" encoding="utf-8"?>
 	<LinearLayout android:layout_width="280dip"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android"	
		>
		<LinearLayout android:orientation="horizontal"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="IP:" android:textSize="20px"
				android:id="@+id/textView1" android:layout_width="75dip"
				android:layout_height="wrap_content"></TextView>
			<EditText android:layout_height="wrap_content"
				android:singleLine="true" android:layout_width="fill_parent"
				android:text="" android:id="@+id/editIPAddress"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="Port:" android:textSize="20px"
				android:layout_height="wrap_content" android:id="@+id/textView2"
				android:layout_width="75dip"></TextView>
			<EditText android:layout_height="wrap_content"
				android:singleLine="true" android:numeric="integer"
				android:layout_width="fill_parent" android:text="8888" android:id="@+id/editPort"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal">
			<Button android:layout_height="wrap_content" android:text="Connect"
				android:id="@+id/btnConnect" android:layout_width="130dip"
				android:enabled="true"></Button>
			<Button android:layout_height="wrap_content" android:text="Exit"
				android:id="@+id/btnExit" android:layout_width="130dip"></Button>
		</LinearLayout>
	</LinearLayout>