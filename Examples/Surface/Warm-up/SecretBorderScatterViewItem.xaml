<s:ScatterViewItem x:Class="WarmUp.SecretBorderScatterViewItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    CanScale="False" 
   ScatterManipulationDelta="BorderScatterViewItem_ScatterManipulationDelta"
                   
                   >
    <Border Width="150" 
                    Height="150" 
                    Background="Red" 
                    BorderBrush="Transparent" 
                    BorderThickness="0"                    
                    Name="MySecretBorder"
                    >
        <TextBlock Name="MySecretBorderTextBlock" FontSize="20" Visibility="Hidden"></TextBlock>
    </Border>
</s:ScatterViewItem>
